#!/usr/bin/env sh

# Color
GREEN='\033[92m'
RED='\033[91m'
BLUE='\033[94m'
NC='\033[0m'

#Logic core compiler
compile_modules() {
    local BASE_PATH
    BASE_PATH="$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" &>/dev/null && pwd)"

    if [ -d "$BASE_PATH" ]; then
        cd "$BASE_PATH" || return 1
    fi

    echo -e "${GREEN}[*] Auto-detected Path: $(pwd)${NC}"

    # --- BAGIAN GOLANG ---
    if command -v go > /dev/null; then
        [ -f "go.mod" ] && rm go.mod

        echo -e "${GREEN}[*] Initializing Go modules.${NC}"
        go mod init storm-os

        echo -e "${GREEN}[*] Downloading dependencies.${NC}"
        go get github.com/google/gopacket@latest
        go get github.com/google/gopacket/pcap@latest
        go mod tidy

        find modules/ -name "*.go" | while read -r src; do
            output="${src%.go}"
            echo -e "${GREEN}[+] Compiling Go: $src${NC}"
            CGO_ENABLED=1 go build -mod=mod -o "$output" "$src"
            chmod +x "$output"
        done
    fi

    # --- LOGIKA C ---
    if command -v gcc > /dev/null; then
        find modules/ -name "*.c" | while read -r src; do
            output="${src%.c}"
            echo -e "${GREEN}[+] Compiling C: $src${NC}"
            if grep -q "pcap.h" "$src"; then
                gcc "$src" -o "$output" -lpcap
            else
                gcc "$src" -o "$output"
            fi
        done
    fi
}
